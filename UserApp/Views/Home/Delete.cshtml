@model UserApp.Models.UserClass

@{
    ViewData["Title"] = "Delete";
}

<h6 class="display-4 text-primary text-center">Delete</h6>

<h3 class="text-danger text-center">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-secondary m1-3 mr-1">Back to List</a>

            </form>
        </div>
    </div>
</div>
